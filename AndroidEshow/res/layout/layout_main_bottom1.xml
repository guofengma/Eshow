<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/cTitleBar"
    android:orientation="horizontal" >
    
    <!-- button -->

    <TextView
        android:id="@+id/bar_text1"
        style="@style/radio_bottom"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/selector_main_tab_1"
        android:gravity="center"
        android:text="商品"
        android:textColor="@color/cText" />
 
    <TextView
        android:id="@+id/bar_text2"
        style="@style/radio_bottom"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/selector_main_tab_2"
        android:gravity="center"
        android:text="销售单"
        android:textColor="@color/cText" />
    
    
    
    
    <RelativeLayout
        android:id="@+id/bar_text3_layout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/bar_text3"
            style="@style/radio_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/selector_main_tab_3"
            android:text="采购单"
            android:textColor="@color/cText" />

        <TextView
            android:id="@+id/num_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bar_text3"
            android:background="@drawable/btn_red"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:visibility="gone"
           android:textColor="@color/cWhite" 
           android:text="*"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/bar_text4"
        style="@style/radio_bottom"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/selector_main_tab_4"
        android:gravity="center"
        android:text="统计"
        android:textColor="@color/cText" />
    

</LinearLayout>